#include <iostream>

int sd(int arr[][4])
{
	int arr2[4][4];
	for (int i = 0; i < 1; i++)
	{
		for (int j = 0; j < 4; j++)
		{
			arr2[i][j] = 0;
		}

	}
	
 	for (int i = 1; i < 4; i++)
	{
		for (int j = 0; j < 4; j++)
		{
			arr2[i][j] = arr[i-1][j];
		}
		
	}
	for (int i = 0; i < 4; i++)
	{
		for (int j = 0; j < 4; j++)
		{
			std::cout << arr2[i][j];
			if (j == 3)
			{
				std::cout << std::endl;
			}
		}
	}
	return 0;
}
